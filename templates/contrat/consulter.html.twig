{% extends 'base.html.twig' %}

{% block title %}Consultation d'un contrat{% endblock %}

{% block body %}

<div class="tab-lister-instrument">

    <H1>Information sur le contrat  {{ contrat.id }}</H1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>



    <tr><td>Id : </td><td>{{contrat.id}} </td></tr>
    <tr><td>Date de début: </td><td>{{contrat.datedebut|date("d/m/Y")}}</td>

    <tr><td>Date de fin : </td><td>{{contrat.datefin|date("d/m/Y")}}</td></tr></tr>

    <tr><td>Attestation d'assurance: </td><td>{{contrat.attestationassurance}}</td></tr>
    <tr><td>Etat au debut pret: </td><td>{{contrat.etatdetailledebut}}</td></tr>
    <tr><td>Etat à la fin du pret  : </td><td>{{contrat.etatdetaillefin}}</td></tr>
    <tr><td>Nom de l'élève: </td><td>{{contrat.eleve.nom}}</td></tr>
    <tr><td>Prénom de l'élève: </td><td>{{contrat.eleve.prenom}}</td></tr>
    <tr><td>Nom de l'instrument: </td><td>{{contrat.instrument.name}}</td></tr>
                    </thead>
                    <tfoot>

                    {% if eleve.responsables is not empty %}
                        <tr><td>Responsables de l'élève :</td>
                        <td>
                        {% for responsable in eleve.responsables %}
                           {{ responsable.nom|upper }} {{ responsable.prenom }}

                        {% endfor %}
                        </td>
                        </tr>
                    {% else %}
                        <p>Cet élève n'a pas de responsables.</p>
                    {% endif %}
</table>





<h2>Toutes les interventions :</h2>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><a href="/23PHONK/public/intervention/ajouter">Ajouter une intervention</a></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Date Debut</th>
                    <th>Date Fin</th>
                    <th>Prix</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tfoot>

                </tfoot>
                <tbody>




                {% for i in interventions %}
                    <tr>
                    <td>{{ i.dateDebut|date('d/m/Y')}}</td>
                    <td>{{ i.dateFin|date('d/m/Y')}}</td>
                    <td>{{ i.prix}}</td>
                    <td>{{ i.descriptif}}</td>
                    <td>
                        <a href="#">✏️</a>
                        <a href="#">👁️</a>
                        <a href="#">🗑️</a>
                    </td>
                {% else %}
                    <tr>
                        <th>Aucune intervention n'a été trouvée.</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}