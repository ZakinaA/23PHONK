{% extends 'base.html.twig' %}
{% block title %}Cours Lister !{% endblock %}
{% block body %}
    <h1 class="h3 mb-2 text-gray-800">Tous les cours</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><a href="/23PHONK/public/cours/ajouter">Ajouter un cours</a></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
    {% if pCours %}
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <tr>
                <th>Type d'Instrument</th>
                <th>Jour</th>
                <th>Heure de d√©but</th>
                <th>Heure de fin</th>
                <th>√Çge minimum</th>
                <th>√Çge maximum</th>
                <th>Nombre de places max</th>
                <th>Action</th>
            </tr>

            {% set groupedCours = {} %}

            {% for c in pCours %}
                {% set typeInstrument = c.typeInstrument.libelle %}

                {# Initialize groupedCours[typeInstrument] if not set #}
                {% if groupedCours[typeInstrument] is not defined %}
                    {% set groupedCours = groupedCours|merge({(typeInstrument): []}) %}
                {% endif %}

                {# Add the current course to the corresponding typeInstrument in groupedCours #}
                {% set groupedCours = groupedCours|merge({(typeInstrument): groupedCours[typeInstrument]|merge([c])}) %}
            {% endfor %}

            {# Render the table based on the prepared data #}
            {% for typeInstrument, coursList in groupedCours %}
                {# Sort the coursList by day of the week and then by time #}
                {% set sortedCoursList = coursList|sort((a, b) => (a.jour.libelle > b.jour.libelle) ? 1 : (a.jour.libelle < b.jour.libelle) ? -1 : (a.heureDebut > b.heureDebut) ? 1 : -1) %}

                {% for c in sortedCoursList %}
                    <tr>
                        {% if loop.first %}
                            <td rowspan="{{ sortedCoursList|length }}">{{ typeInstrument }}</td>
                        {% endif %}
                        <td>{{ c.jour.libelle }}</td>
                        <td>{{ c.heureDebut|date('H:i') }}</td>
                        <td>{{ c.heureFin|date('H:i') }}</td>
                        <td>{{ c.ageMini }}</td>
                        <td>{{ c.ageMaxi }}</td>
                        <td>{{ c.nbPlaces }}</td>
                        <td>
                            <a href="/23PHONK/public/cours/modifier/{{ c.id }}">‚úèÔ∏è</a>
                            <a href="/23PHONK/public/cours/consulter/{{ c.id }}">üëÅÔ∏è</a>
                            <a href="#">üóëÔ∏è</a>
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </table>
    {% else %}
        <p>Aucun cours n'a √©t√© trouv√©.</p>
    {% endif %}
        </div>
    </div>
</div>
{% endblock %}


